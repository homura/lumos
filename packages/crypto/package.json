{
  "name": "@ckb-lumos/crypto",
  "version": "0.20.0",
  "description": "Crypto library for Lumos",
  "author": "",
  "homepage": "https://github.com/ckb-js/lumos#readme",
  "license": "MIT",
  "browser": "./lib/crypto-browser.js",
  "types": "lib/crypto.d.ts",
  "main": "./lib/crypto.js",
  "module": "./lib.esm/crypto.js",
  "exports": {
    ".": {
      "import": "./lib.esm/crypto.js",
      "require": "./lib/crypto.js",
      "types": "./lib/crypto.d.ts"
    },
    "./crypto-browser": {
      "import": "./lib.esm/crypto-browser.js",
      "require": "./lib/crypto-browser.js",
      "types": "./lib/crypto-browser.d.ts"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=12.0.0"
  },
  "directories": {
    "lib": "lib",
    "lib.esm": "lib.esm",
    "test": "tests"
  },
  "files": [
    "lib",
    "lib.esm",
    "src"
  ],
  "dependencies": {
    "@noble/hashes": "1.3.1",
    "@noble/secp256k1": "2.0.0",
    "@types/aes-js": "^3.1.1",
    "browserify-aes": "^1.2.0",
    "scrypt-js": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckb-js/lumos.git"
  },
  "scripts": {
    "fmt": "prettier --write \"{src,tests,examples}/**/*.ts\" package.json",
    "lint": "eslint -c ../../.eslintrc.js \"{src,tests,examples}/**/*.ts\"",
    "build": "npm run build:all",
    "build:all": "lumos-build --types --esm --cjs",
    "clean": "shx rm -rf lib lib.esm",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "npm publish"
  },
  "bugs": {
    "url": "https://github.com/ckb-js/lumos/issues"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
